            <td data-title="'Name'" sortable="'name'">
                {{Employee.Name}}
            </td>
            <td data-title="'Salary'" sortable="'salary'">
                {{Employee.Salary}}
            </td>
            <td class="text-center">
                <a href="/E,ployee/Edit/{{Employee.Id}}"><i class="fa fa-2x fa-edit"></i></a>
            </td>
            <td>
                <a href="/Employee/Delete/{{Employee.Id}}">
